---
import data from "../components/Habitaciones/dataHabitaciones.json";
import CSS from "../styles/modules/habitaciones.module.css";
import Habitacion from "./Habitaciones/Habitacion.astro";
---

<section class={CSS.sectionHabitaciones}>
  <header class={CSS.titleHabitaciones}>
    <h2>Habitaciones</h2>
    <p>
      Queremos que tu estancia sea placentera y disfrutes del encanto de nuestras cómodas
      habitaciones. ¡Conócelas!
    </p>
  </header>
  <div class={CSS.containerHabitaciones}>
    <div class={CSS.containerButtonCarousel}>
      <button id="buttonPrevCarousel">
        <div class={CSS.containerIconButtonCarousel}>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M22 12a10 10 0 0 1-10 10A10 10 0 0 1 2 12A10 10 0 0 1 12 2a10 10 0 0 1 10 10m-2 0a8 8 0 0 0-8-8a8 8 0 0 0-8 8a8 8 0 0 0 8 8a8 8 0 0 0 8-8m-4.6 4.6L10.8 12l4.6-4.6L14 6l-6 6l6 6z"
            ></path></svg
          >
        </div>
      </button>
    </div>

    <div class={CSS.habitacionesView} id="habitacionesView">
      {
        data.map((habitacion) => (
          <Habitacion
            clasName={CSS.habitacionItem}
            id={habitacion.id}
            tipo={habitacion.tipo}
            nombre={habitacion.nombre}
            imagen={habitacion.imagen}
            detalles={habitacion.detalles}
          />
        ))
      }
    </div>

    <div class={CSS.containerButtonCarousel}>
      <button id="buttonNextCarousel" aria-label="Siguiente">
        <div class={CSS.containerIconButtonCarousel}>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"
            ><path
              fill="currentColor"
              d="M16 3C8.832 3 3 8.832 3 16s5.832 13 13 13s13-5.832 13-13S23.168 3 16 3m0 2c6.087 0 11 4.913 11 11s-4.913 11-11 11S5 22.087 5 16S9.913 5 16 5m-1.78 4.28l-1.44 1.44L18.064 16l-5.282 5.28l1.44 1.44l6-6l.686-.72l-.687-.72z"
            ></path></svg
          >
        </div>
      </button>
    </div>

    <div class={CSS.containerSwipe}>
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
          ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
