---
import CSS from "../styles/modules/hero.module.css";
---

<section class={CSS.hero}>
  <picture>
    <source media="(min-width: 1024px)" srcset="/assets/desktop/hero-desktop.avif" />
    <source
      media="(min-width: 1023px) and (max-width: 768px)"
      srcset="/assets/tablet/hero-tablet.avif"
    />
    <img src="/assets/mobile/hero-mobile.avif" alt="Hero con Astro" class={CSS.heroImage} />
  </picture>
  <div class={CSS.overlay}></div>

  <header class={CSS.heroContent}>
    <div class={CSS.heroLogoTitle}>
      <div class={CSS.heroContainerLogo}>
        <!--?xml version="1.0" encoding="UTF-8"?-->
